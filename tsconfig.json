{
  "compileOnSave": true,
  "compilerOptions": {
		"lib": ["ESNext", "DOM"],
		"module": "NodeNext",
    "moduleResolution": "node",
		"target": "ES2020",
		"sourceMap": true,
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"outDir": "./build"
	},
  "include": ["./src/*"],
  "exclude": ["node_modules"]
}